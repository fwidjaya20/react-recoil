{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": false,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "jsx": "react",
    "lib": ["es6", "es7", "dom"],
    "importHelpers": true,
    "moduleResolution": "node",
    "module": "esnext",
    "paths": {
      "@skeleton/web/*": ["apps/web/src/*"],
      "@skeleton/domain/*": ["src/domains/*"],
      "@skeleton/core/*": ["src/cores/*"],
      "@skeleton/shared/*": ["src/shared/*"],
      "@skeleton/style/*": ["styles/*"]
    },
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": ["dist", "node_modules"]
}